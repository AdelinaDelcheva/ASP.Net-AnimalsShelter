@model AnimalFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="Address...">
                <span asp-validation-for="Age" class="small text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BreedId"></label>
                <select asp-for="BreedId" class="form-control">
                    @foreach (var breed in Model.Breeds)
                    {
                        <option value="@breed.Id">@breed.Breed</option>
                    }
                </select>
                <span asp-validation-for="BreedId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>