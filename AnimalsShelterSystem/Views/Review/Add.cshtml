@model AddReviewViewModel

@{
    this.ViewData["Title"] = "Review activity";
}

<div class="row justify-content-center">
    <form method="post" asp-area="" asp-controller="Review" asp-action="Add" asp-route-id="@Model.AnimalId" class="text-center col-md-6">
        <h3 class="text-dark">Review your experience with</h3>
        <h4>
            <a asp-area="" asp-controller="Animal" asp-action="Details" asp-route-id="@Model.AnimalId">@Model.AnimalName</a>
        </h4>
       
        <hr />
       
        <div class="form-group">
            <label asp-for="Text"></label>
            <textarea rows="5" cold="50" asp-for="Text" class="form-control col-md-12"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="margin-top:2rem">Add review</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}