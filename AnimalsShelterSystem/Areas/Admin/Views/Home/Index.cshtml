﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> animals.
        <br />You can <b>buy care</b> and <b>adopt</b> the free ones, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and volunteers</b> and <b>all adopts and orders</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Animal" asp-action="All"
       class="btn btn-primary btn-lg">All Animals</a>
    <a asp-area="" asp-controller="Animal" asp-action="Add"
       class="btn btn-primary btn-lg">Add Animal</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Characteristic" asp-action="All"
       class="btn btn-primary btn-lg">All Characteristics</a>
    <a asp-area="Admin" asp-controller="Characteristic" asp-action="Add"
       class="btn btn-primary btn-lg">Add Characteristic</a>
    <span>  |   </span>

    <a asp-area="Admin" asp-controller="Breed" asp-action="All"
       class="btn btn-primary btn-lg">All Breeds</a>
    <a asp-area="Admin" asp-controller="Breed" asp-action="Add"
       class="btn btn-primary btn-lg">Add Breed</a>
    <span>  |   </span>
    
    <a asp-area="Admin" asp-controller="Orders" asp-action="All"
       class="btn btn-primary btn-lg">All Orders</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>